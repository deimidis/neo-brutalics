{{!< default}}
{{#post}}
<article class="wrap page {{post_class}}">
  {{#match @page.show_title_and_feature_image}}
    <header class="page-header">
      <h1 class="h1 page-title">{{title}}</h1>
      {{#if custom_excerpt}}
        <p class="page-excerpt">{{custom_excerpt}}</p>
      {{else}}
        {{#if excerpt}}<p class="page-excerpt">{{excerpt}}</p>{{/if}}
      {{/if}}
      {{#if feature_image}}
        <figure class="page-feature-image">
          <img srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
               sizes="(min-width: 1400px) 1400px, 92vw"
               src="{{img_url feature_image size="xl"}}" 
               alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
               class="nb-shadow-lg"/>
          {{#if feature_image_caption}}<figcaption class="caption">{{feature_image_caption}}</figcaption>{{/if}}
        </figure>
      {{/if}}
    </header>
  {{/match}}
  
  <div class="page-content gh-content gh-canvas prose">{{content}}</div>
  
  <footer class="page-footer">
    {{#if updated_at}}
      <p class="page-updated">{{t "Last updated on"}} {{date updated_at format="MMMM DD, YYYY"}}</p>
    {{/if}}
    {{#if published_at}}
      <p class="page-published">{{t "Published on"}} {{date published_at format="MMMM DD, YYYY"}}</p>
    {{/if}}
  </footer>
</article>
{{/post}}
